{
  "name": "tayyari",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build --turbopack",
    "start": "next start",
    "lint": "biome check",
    "format": "biome format --write",
    "test": "vitest",
    "test:run": "vitest run",
    "test:comprehensive": "npx tsx src/test/test-runner.ts",
    "test:unit": "vitest run 'src/**/*.test.ts' --exclude 'src/test/**'",
    "test:integration": "vitest run 'src/test/integration/**/*.test.ts'",
    "test:performance": "vitest run 'src/test/performance/**/*.test.ts' --timeout=120000",
    "test:e2e": "vitest run 'src/test/e2e/**/*.test.ts' --timeout=180000",
    "test:load": "vitest run 'src/test/load/**/*.test.ts' --timeout=300000",
    "test:system": "vitest run 'src/test/system/**/*.test.ts' --timeout=120000",
    "test:validation": "npm run test:integration && npm run test:e2e && npm run test:system",
    "test:perf-only": "npm run test:performance && npm run test:load",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:init": "npx tsx src/lib/database/init.ts",
    "db:seed": "npx tsx src/lib/database/seed.ts"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.6",
    "@ai-sdk/google": "^2.0.8",
    "@ai-sdk/mistral": "^2.0.9",
    "@ai-sdk/openai": "^2.0.19",
    "@monaco-editor/react": "^4.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "ai": "^5.0.22",
    "better-sqlite3": "^12.2.0",
    "clsx": "^2.1.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "highlight.js": "^11.11.1",
    "katex": "^0.16.11",
    "lucide-react": "^0.541.0",
    "markdown-it": "^14.1.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-link-attributes": "^4.0.1",
    "mermaid": "^10.9.1",
    "next": "15.5.0",
    "node-os-utils": "^1.3.7",
    "ollama": "^0.5.17",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-markdown": "^10.1.0",
    "react-syntax-highlighter": "^15.6.1",
    "rehype-highlight": "^7.0.2",
    "rehype-raw": "^7.0.0",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@tailwindcss/postcss": "^4",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-syntax-highlighter": "^15.5.13",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5",
    "vitest": "^3.2.4"
  }
}
